<% if @user.errors %>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User   info</h2>
      
          <%= form_with model: @user, url: user_path(current_user.id),local: true do |f| %>
          
            <h5>Name</h5>
                <%= f.text_field :name, class:"col-md-8" %>
            <h5>Image</h5>
                <%= f.attachment_field :profile_image, class:"col-md-8" %>
          <h5>introduction</h5>
                <%= f.text_area :introduction %>
                <nav>
                <%= f.submit 'Update User', class:"btn btn-secondary" %>
                </nav>
          <% end %>
    </div>  
  </div>
</div>