<% if @user.errors %>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User   info</h2>
      
          <%= form_with model: @user, url: user_path(current_user.id),local: true do |f| %>
          
          <form>
            <div class="form-group">
              <label for="exampleFormControlInput1">Name</label>
                <%= f.text_field :name, class:"form-control" %>
            </div>     
            <div class="form-group">
              <label for="user_image">Image</label>
                <%= f.attachment_field :profile_image, class:"form-control-file" %>
            </div>    
            <div class="form-group">
              <label for="exampleFormControlTextarea1">Introduction</label>
                <%= f.text_area :introduction, class:"form-control"%>
            </div>    
            <div class="form-group">
                <%= f.submit 'Update User', class:"btn btn-secondary" %>
            </div>
          </form> 
          <% end %>
    </div>  
  </div>
</div>