<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
          <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
          

      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
	          <th>name</th>
	           <th><%= @user.name %></th>
          </tr>
          <tr>
	          <th>introduction</th>
	           <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <%= link_to "", edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block fas fa-users-cog" %>
      <%= form_with model: @book, url: books_path, local: true do |f| %>
      
      <h2 class="mt-3">New book</h2>
      
      <form>
        <div class="form-group">
          <label for="exampleFormControlInput1">Title</label>
            <%= f.text_field :title, class:"form-control" %>
        </div>     
          
        <div class="form-group">
          <label for="exampleFormControlTextarea1">Opinion</label>
            <%= f.text_area :body, class:"form-control" %>
        </div>    
        <div class="form-group">
        <%= f.submit 'Create Book', class:"btn btn-success" %>
        </div>
      </form> 
      <% end %>
      
    </div>
   
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
          <table class="table">
            <tbody>
              <tr>
                <td><%= link_to user_path(@book.user_id) do %>
                    <%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",size:'50x50',format: 'no_image.jpg' %>
                  <nav>
                    <%= @book.user.name %>
                  </nav>
                    <% end %>
                </td>
                <td><%= link_to @book.title %></td>
                <td><%= @book.body %></td>
                    <% if @book.user_id == current_user.id %>
                <td><%= link_to "edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %></td>
                <td><%= link_to "destroy", book_path(@book.id), class:"btn-sm btn-danger destroy(@book.id)", method: :delete,data: {confirm: "本当に消しますか？"} %></td>
                    <% end %>
              </tr>
            </tbody>
          </table>
      </div>
  </div>
</div>