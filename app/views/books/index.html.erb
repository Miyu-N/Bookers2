<% if @book.errors %>
   <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
       <% end %>
        </ul>
      <% end %>

<div container px-5 px-sm-0></div>
<div class="row">

 <div class="col-md-3">
   <h2>User info</h2>
   <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

   <table class="table">
     <tbody>
      <tr></tr>
         <tr>
	           <th>name</th>
	           <th></th>
         </tr>
         <tr>
	           <th>introduction</th>
	           <th></th>
         </tr>
     </tbody>
   </table>
   
  <div class="row">
   <%= link_to"",edit_user_password_path(@user.id), class: "btn btn-outline-secondary btn-block fas-fa-user-cog" %>
  </div>

   <%= form_with model: @book, url: books_path, local: true do |f| %>
    <h2>New book</h2>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
     <%= f.text_field :body %>
    <nav>
    <%= f.submit 'Create Book' %>
    </nav>
    <% end %>

  </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
         <thead>
          <tr>
             <th></th>
             <th>Title</th>
             <th>Opinion</th>
             <th colspan="3"></th>
          </tr>
          





            <% @books.each do |book| %>
          <tr>
           <td><%= link_to user_path(book.user_id) do %>
      
               <% end %>

           <td><%=link_to book.title, book_path(book.id)%></td>
           <td><%=link_to book.body %></td>
          </tr>
               <% end %>
              
               
        </thead>
      </table>
    </div>

</div>
